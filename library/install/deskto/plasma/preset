#!/bin/bash


## PACKAGE
PACKAGE="${PACKAGE} sddm weston plasma plasma-nm plasma-keyboard kdegraphics-thumbnailers xdg-desktop-portal-kde ffmpegthumbs dolphin discover kwallet kwalletmanager kwallet-pam ksshaskpass powerdevil gvfs gvfs-goa gvfs-google gvfs-gphoto2 gvfs-nfs gvfs-onedrive gvfs-smb kalk merkuro konsole okular breeze-icons "

## DAEMONS
RDAEMON="${RDAEMON} sddm "

## GLOBALS
GDAEMON="${GDAEMON}"


## CONFIGS
if [[ -d "$appdir/library/install/deksto/plasma/config" ]]; then
    cp -fr "$appdir/library/install/deksto/plasma/config/"* "$appdir/config/define/"
fi